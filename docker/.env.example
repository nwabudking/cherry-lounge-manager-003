############
# API Configuration
############

# URL where Kong is accessible (external URL for browser)
SUPABASE_PUBLIC_URL=http://localhost:8000

# Internal API URL
API_EXTERNAL_URL=http://localhost:8000

# Frontend URL (for redirects after auth)
SITE_URL=http://localhost:5173

# Additional redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

############
# Auth Configuration
############

# Disable signups (set to true to prevent new registrations)
DISABLE_SIGNUP=false

# Auto-confirm email signups (recommended for self-hosted)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable email signup
ENABLE_EMAIL_SIGNUP=true

# Enable anonymous users
ENABLE_ANONYMOUS_USERS=false

# Enable phone signup
ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=true

############
# SMTP Configuration (Optional - for email verification)
############

SMTP_ADMIN_EMAIL=admin@cherry-pos.local
SMTP_HOST=inbucket
SMTP_PORT=2500
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_NAME=Cherry POS

############
# Service Ports
############

KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
STUDIO_PORT=3000
APP_PORT=5173
INBUCKET_WEB_PORT=9000

############
# Edge Functions
############

FUNCTIONS_VERIFY_JWT=false

############
# Image Proxy
############

IMGPROXY_ENABLE_WEBP_DETECTION=true

############
# PostgREST
############

